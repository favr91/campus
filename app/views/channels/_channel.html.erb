<div class="col-xs-12 col-sm-4  col-sm-offset-4 col-md-offset-3">
<div class="thumbnail">
      <% if channel.image.channel_pic.url.present?%>
        <%=  image_tag(channel.image.channel_pic.url, class: 'img-responsive') %>
      <% end %>
      <div class="caption">
        <h3><%= link_to channel.nombre, channel %></h3>
        <p><%= channel.descripcion %></p>
        <p><%= link_to "Visitar Canal", channel, class: "btn btn-success" %> </p>
      </div>
</div>
</div>
