<%= form_for(post) do |f| %>
<% if post.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(post.errors.count, "error") %>
        prohibited this post from being saved:</h2>

    <ul>
        <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= f.label :contenido %>
    <%= f.text_area :contenido %>
</div>

<div class="field">
    <%= f.label :tipo_post %>
    <%= f.text_field :tipo_post %>
</div>

<div class="field">
    <%= f.label :me_gusta %>
    <%= f.number_field :me_gusta %>
</div>

<div class="field">
    <%= f.label :user_id %>
    <%= f.text_field :user_id %>
</div>

<div class="field">
    <%= f.label :channel_id %>
    <%= f.text_field :channel_id %>
</div>

<div class="actions">
    <%= f.submit %>
</div>
<% end %>
